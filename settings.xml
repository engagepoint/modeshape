                        <updatePolicy>never</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
        </profile>
        -->
    </profiles>

    <proxies>
        <proxy>
            <active>true</active>
            <protocol>http</protocol>
            <host>proxy2.cht</host>
            <port>3128</port>
            <nonProxyHosts>localhost|127.0.0.1|artifactory.engagepoint.ua</nonProxyHosts>
        </proxy>
        <proxy>
            <active>true</active>
            <protocol>https</protocol>
            <host>proxy2.cht</host>
            <port>3128</port>
            <nonProxyHosts>localhost|127.0.0.1|artifactory.engagepoint.ua</nonProxyHosts>
        </proxy>
    </proxies>

    <mirrors>
        <mirror>
            <mirrorOf>*</mirrorOf>
            <name>repo</name>
            <url>http://artifactory.engagepoint.ua:8081/artifactory/repo</url>
            <id>repo</id>
        </mirror>
    </mirrors>

    <activeProfiles>
        <activeProfile>jboss-public-repository</activeProfile>
        <!--<activeProfile>jboss-eap-repository</activeProfile>-->
    </activeProfiles>
</settings>
